# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]
indent_style = space
indent_size = 2

[**.jsx]
indent_style = space
indent_size = 2

# Tabs in sass
[**.scss]
indent_style = space
indent_size = 2

# Tabs in less
[**.less]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.html]
indent_style = tab
indent_size = 4
